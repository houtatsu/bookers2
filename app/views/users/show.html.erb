<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <div><%= image_tag @user.get_profile_image(100,100) %></div>
      <table class="table">
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <div class="row">
        <% if @user == current_user %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-outline-secondary btn-block" %></p>
        <% end %>
      </div>
      <h2 class="mt-3">New Book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label class="book_title">Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label class="book_opinion">Opinion</label><br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @new_books.each do |book| %>
            <% if book.user.id == @user.id %>
              <tr>
                <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>